pkgname=cmojoloader
pkgver=1.2.0
pkgrel=1
pkgdesc='Mojo FPGA Loader in c'
arch=('i686' 'x86_64')
url='https://github.com/sleepybishop/cmojoloader'
license=('GPL')
source=("git+https://github.com/sleepybishop/cmojoloader.git")
sha1sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"

  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/usr" install
}
